{
    "chainer":{
      "in": ["x"],
      "pipe": [
        {
          "class_name": "str_lower",
          "id": "lower",
          "in": ["x"],
          "out": ["x_lower"]
        },
        {
          "class_name": "nltk_moses_tokenizer",
          "id": "tokenizer",
          "in": ["x_lower"],
          "out": ["x_tokens"]
        },
        {
          "id": "vocab",
          "class_name": "simple_vocab",
          "save_path": "{PROJECT_PATH}/data/external/russian_words/russian_words_vocab.dict",
          "load_path": "{PROJECT_PATH}/data/external/russian_words/russian_words_vocab.dict"
        },
        {
          "in": ["x_tokens"],
          "out": ["tokens_candidates"],
          "class_name": "deeppavlov.models.spelling_correction.levenshtein.searcher_component:LevenshteinSearcherComponent",
          "words": "#vocab.keys()"
        },
        {
          "class_name": "src.models.KenlmPruner.kenlm_pruner:KenlmPruner",
          "in": ["tokens_candidates"],
          "out": ["pruned_candidates"],
          "load_path": "{PROJECT_PATH}/models/kenlm/ru_wiyalen_no_punkt.arpa.binary",
          "beam_size": 100
        }
      ],
      "out": ["pruned_candidates"]
    },
    "metadata": {
      "variables": {
        "ROOT_PATH": "~/.deeppavlov",
        "PROJECT_PATH": "{ROOT_PATH}",
        "DOWNLOADS_PATH": "{ROOT_PATH}/downloads",
        "MODELS_PATH": "{ROOT_PATH}/models"
      },
      "requirements": [
        "{DEEPPAVLOV_PATH}/requirements/spelling.txt",
        "{DEEPPAVLOV_PATH}/requirements/kenlm.txt"
      ]
    }
}